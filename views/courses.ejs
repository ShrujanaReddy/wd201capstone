<%- include('header.ejs') %>
<h3>Courses</h3>
<a href="/createcourse" class="text-blue-600 hover:underline mb-2">Create a Course</a>
<% for(var i=0;i<allCourses.length;i++) { %>
    <h4>
        <%= educatorCourses[i].title %>
    </h4>
    <p>
        <%= educatorCourses[i].description %>
    </p>
    <a href="/educators/courses/<%= educatorCourses[i].id %>/chapters" class="btn btn-primary">View Chapters</a>
    <form action="/educators/courses/<%= educatorCourses[i].id %>/chapters/create" method="GET">
        <button>Add Chapter</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="course_id" value="<%= educatorCourses[i].id %>">
    </form>
<% } %>